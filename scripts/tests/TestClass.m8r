// Tests class functionality

class MyClass
{
	var _myVar;
	
	constructor(a, b, c) {
		_myVar = a + b + c;
	}
	
	function doSomething(x) {
		println("1) Simple class test: _myVar (s/b 6) = " + _myVar + ", x (s/b 'Hello') = " + x);
	}
}

var myClass = new MyClass(1, 2, 3);
myClass.doSomething("Hello");


class Circle
{
	var _radius;
	var PI = 3.14159;
	
	constructor(radius) { _radius = radius; }
	
	function area() { return PI * _radius * _radius; }
}

var myCircle = new Circle(6);
println("2) Test of Circle class: myCircle(6) area (s/b 113.09724) = " + myCircle.area());
